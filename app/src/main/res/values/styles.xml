<resources>
    <!-- Colors for light mode -->
    <style name="LightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#FF434343</item>
        <item name="colorAccent">#000000</item>
        <item name="colorLightGrey">#EEEEEE</item>
        <item name="colorDarkGrey">#B0B0B0</item>
        <item name="colorVeryDarkGrey">#EEEEEE</item>
        <item name="black">#000000</item>
        <item name="colorTextSearch">#FF434343</item>
        <item name="colorPrimarySearchPublic">#FFFFFF</item>

        <item name="active_tab_color">#000000</item>
        <item name="inactive_tab_color">#D8D8D8</item>

        <item name="toolbarColoredBackArrow">#000000</item>
        <item name="textColorToolbar">#000000</item>
        <item name="toolbarBackgroundColor">#FFFFFF</item>
        <item name="colorNavigationIcon">#000000</item>
        <item name="toolbarColorControlNormal">#000000</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/styleActionMode</item>
        <item name="closeItemLayout">@layout/abc_action_mode_close_item_material_custom_black</item>
        <item name="icon_action_bar_download">@drawable/ic_file_download_black_outline_24dp</item>
        <item name="icon_action_bar_remove">@drawable/ic_delete_forever_black_24</item>
        <item name="icon_action_bar_move_to">@drawable/ic_baseline_arrow_move_24</item>
        <item name="icon_action_bar_selectAll_bookmarks">@drawable/ic_baseline_select_all_black_24
        </item>
        <item name="icon_action_bar_reset_category_bookmarks">
            @drawable/ic_baseline_remove_circle_black_24
        </item>
        <item name="icon_action_bar_rename_collection">@drawable/ic_baseline_edit_black_24</item>
        <item name="icon_action_bar_remove_only_collection">
            @drawable/ic_baseline_remove_circle_black_24
        </item>

        <item name="verifiedImageSearch">@drawable/ic_baseline_check_circle_black_24</item>
    </style>

    <!-- Colors for dark mode -->
    <style name="DarkTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="colorLightGrey">#EEEEEE</item>
        <item name="colorDarkGrey">#EEEEEE</item>
        <item name="colorVeryDarkGrey">#3F3F3F</item>
        <item name="black">#FFFFFF</item>
        <item name="colorTextSearch">#FFFFFF</item>
        <item name="colorPrimarySearchPublic">#121212</item>

        <item name="active_tab_color">#FFFFFF</item>
        <item name="inactive_tab_color">#000000</item>

        <item name="toolbarColoredBackArrow">#FFFFFF</item>
        <item name="textColorToolbar">#FFFFFF</item>
        <item name="toolbarBackgroundColor">#000000</item>
        <item name="colorNavigationIcon">#FFFFFF</item>
        <item name="toolbarColorControlNormal">#FFFFFF</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/styleActionMode</item>
        <item name="closeItemLayout">@layout/abc_action_mode_close_item_material_custom_white</item>
        <item name="icon_action_bar_download">@drawable/ic_file_download_white_outline_24dp</item>
        <item name="icon_action_bar_remove">@drawable/ic_delete_forever_white_24</item>
        <item name="icon_action_bar_move_to">@drawable/ic_baseline_arrow_move_white_24</item>
        <item name="icon_action_bar_selectAll_bookmarks">@drawable/ic_baseline_select_all_white_24
        </item>
        <item name="icon_action_bar_reset_category_bookmarks">
            @drawable/ic_baseline_remove_circle_white_24
        </item>
        <item name="icon_action_bar_rename_collection">@drawable/ic_baseline_edit_white_24</item>
        <item name="icon_action_bar_remove_only_collection">
            @drawable/ic_baseline_remove_circle_white_24
        </item>

        <item name="verifiedImageSearch">@drawable/ic_baseline_check_circle_white_24</item>
    </style>

    <!-- Bottom Navigation View -->
    <style name="MyBottomNavigationTheme">
        <item name="colorPrimary">?attr/active_tab_color</item>
    </style>

    <!-- Toolbar -->
    <style name="MyToolbar">
        <item name="colorControlNormal">?attr/toolbarColorControlNormal</item>
        <item name="android:textColorSecondary">?attr/toolbarColoredBackArrow</item>
        <item name="titleTextColor">?attr/textColorToolbar</item>
        <item name="background">?attr/toolbarBackgroundColor</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowButton</item>
    </style>

    <!-- Overflow Button -->
    <style name="MyOverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorNavigationIcon</item>
    </style>

    <!-- TabLayout -->
    <style name="MyTabLayout" parent="android:Widget.TabWidget">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">?attr/colorAccent</item>
    </style>

    <!-- Follow Button -->
    <style name="MyFollowButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorAccent</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <!-- Remove Button with proper right padding like overflow menu -->
    <style name="MyOverflowRemoveButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorNavigationIcon</item>
    </style>

    <!-- Style for contextual action bar for downloading multiple posts-->
    <style name="styleActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">?attr/toolbarBackgroundColor</item>
        <item name="actionMenuTextColor">?attr/textColorToolbar</item>
        <item name="closeItemLayout">?attr/closeItemLayout</item>
    </style>
</resources>